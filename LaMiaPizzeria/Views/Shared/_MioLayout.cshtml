<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LaMiaPizzeria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LaMiaPizzeria.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        @Html.Partial("_Header");
    </header>

    <main>
        @RenderBody();
    </main>

    <footer>
        @Html.Partial("_Footer");
    </footer>

    <script src="~/js/site.js"></script>
    <!-- Predispongo un segnaposto per poter inserire degli eventuali script -->
    @RenderSection("ScriptSection", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>
